{
  "parser": "babel-eslint",
  "rules": {
    "indent": [2, 4],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],

    "comma-dangle": [2, "always-multiline"],
    "no-extra-parens": [2],
    "no-extra-semi": [2],
    "no-dupe-keys": [2],
    "no-else-return": [2]
  },
  "env": {
    "es6": true,
    "browser": true,
    "commonjs": true,
    "node": true,
    "amd": true
  },
  "extends": "eslint:recommended"
}
